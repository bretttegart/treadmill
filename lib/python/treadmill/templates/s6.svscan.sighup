#!{{ _alias.execlineb }} -P

{{ _alias.redirfd }} -r 0 /dev/null
{{ _alias.fdmove }} -c 2 1

{{ _alias.foreground }} {
    {{ _alias.echo }} "Received SIGHUP"
}

{% if kill_svc -%}
{{ _alias.foreground }} {
    {{ _alias.s6_svc }} -k -wD {{ kill_svc }}
}
{%- endif %}

# SIGHUP : acts as if a s6-svscanctl -h command had been received.
{{ _alias.s6_svscanctl }} -h .
