#!{{ _alias.execlineb }} -P

{{ _alias.redirfd }} -r 0 /dev/null
{{ _alias.fdmove }} -c 2 1

{{ _alias.if }} {
    {{ _alias.echo }} "Waiting for all services to really finish"
}

{{ _alias.if }} {
    {{ _alias.elglob }} -v SVC_DIRS * {{ _alias.s6_svwait }} -aD -t {{ timeout }} $SVC_DIRS
}

{{ _alias.if }} {
    {{ _alias.echo }} "All services are finished"
}
