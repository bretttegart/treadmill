#!{{ _alias.execlineb }} -P

{{ _alias.redirfd }} -r 0 /dev/null
{{ _alias.fdmove }} -c 2 1

{{ _alias.if }} {
    {{ _alias.echo }} "Received SIGTERM"
}

{% if monitor_service -%}
{{ _alias.if }} {
    {{ _alias.s6_svc }} -k -wD "{{ monitor_service }}"
}
{% endif -%}

# SIGTERM : acts as if a s6-svscanctl -t command had been received.
{{ _alias.s6_svscanctl }} -t .
